{% extends "BaseDashboard.html.twig" %}

{% block content %}


      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <div class="jumbotron">
                <h1>Administrez vos articles</h1>
				        <a href="article/add" class="btn btn-primary pull-left" role="button"> Ajouter un nouvel article </a>
		          </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
              <div class="panel-heading">
                <h3>Articles <span class="badge" style="background-color: #00264d; font-size:16px; margin-top:2px" data-toggle="tooltip" data-placement="top" title="Vous avez {{ articles | length }} articles">{{ articles | length }}</span></h3>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-hover">
                  <thead></thead>
                  <tbody>
                    {% for article in articles %}
                      <tr>
                        <td>
                          <h4>
                            {{ article.title }}
                            <small> | {{ article.date | date("m/d/Y") }}</small>
                          </h4>
                        </td>
                        <td style="vertical-align: middle;">
                          <a href="/dashboard/article/edit?id={{ article.id }}" type="button" class="pull-right text-warning" style="margin-left: 15px;">
                            <i class="fa fa-pencil-square-o" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Ã‰diter"></i>
                          </a>
                          <a href="/dashboard/article/delete?id={{ article.id }}" class="pull-right text-danger" role="button"> 
                            <i class="fa fa-trash" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Supprimer"></i>
                          </a>
                        </td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /#page-content-wrapper -->
  </div>
  <!-- /#wrapper -->

{% endblock %}
    
{% block javascript %}

	<script>
	$("#menu-toggle").click(function(e) {
	    e.preventDefault();
	    $("#wrapper").toggleClass("toggled");
	});

  tinymce.init({
    selector: '#article'
  });

	</script>

{% endblock %}
