      </ul>
    </div> 

    {% set flash = session.flash %}
    {% if flash.message != '' %}
      <div class="alert alert-{{ flash.type }}" role="alert">
        <p>{{ flash.message|raw }}</p>
      </div> 
    {% endif %}

    {% endblock %}

