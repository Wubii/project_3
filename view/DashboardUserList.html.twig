{% extends "BaseDashboard.html.twig" %}

{% block content %}

	<div class="container">
	  <div class="row">
        <div class="col-lg-10">
          <div class="jumbotron">
            <h4>Gerer vos utilisateurs</h4>
		  </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-10">
          <div class="panel panel-default" style="margin-top:30px">
            <div class="panel-body">
              {% if users|length == 0 %}
                <p> Pas de d'utilisateurs enregistres </p>
              {% endif %}
              {% for user in users %} 
                <div class="panel panel-default" style="margin-top:30px">
                  <div class="panel-body">	  
	                <h4> Nom : {{ user.username }} </h4>	
	                <small> Mail : {{ user.mail }} </small>
	              </div>
	            </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}










